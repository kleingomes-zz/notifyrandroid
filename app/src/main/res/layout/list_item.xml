<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="59dp"
    android:background="@color/colorWhite"
    >

    <ImageView
        android:id="@+id/item_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:paddingTop="5dp"
        android:paddingBottom="-15dp"
        android:maxWidth="50dp"
        android:minWidth="50dp"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/item_image_view"
        android:layout_toRightOf="@+id/item_image_view"
        android:maxLines="1"
        android:fontFamily="sans-serif"
        android:text="Apple"
        android:textColor="#4a4a4a"
        android:textSize="17sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/item_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_image_view"
        android:layout_alignLeft="@+id/item_name"
        android:layout_alignStart="@+id/item_name"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:paddingTop="2dp"
        android:paddingBottom="8dp"
        android:text="Frequency: 1"
        android:textColor="@color/darkGray"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnFrequency"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="false"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ring_button"
        android:text="..."
        android:textColor="@color/colorNotifyrLightBlue"
        android:textSize="30sp"
        android:textStyle="normal|bold" />

    <CheckBox
        android:id="@+id/checkboxDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:layout_marginTop="27dp"
        android:layout_toLeftOf="@+id/btnFrequency"
        android:layout_toStartOf="@+id/btnFrequency"
        android:text="" />


</RelativeLayout>

