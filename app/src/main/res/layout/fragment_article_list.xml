
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center|top"
        android:background="@color/colorWhite">

    <RadioGroup
        android:id="@+id/radioGroupTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButtonNewest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/radio_button_selector"
            android:button="@null"
            android:text="Newest"
            android:textAlignment="center"
            android:textColor="@drawable/radio_button_text_color" />

        <RadioButton
            android:id="@+id/radioButtonPopular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/radio_button_selector"
            android:button="@null"
            android:checked="true"
            android:text="Popular"
            android:textAlignment="center"
            android:textColor="@drawable/radio_button_text_color"

            />

        <RadioButton
            android:id="@+id/radioButtonBookmarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/radio_button_selector"
            android:button="@null"
            android:text="Bookmarks"
            android:textAlignment="center"
            android:textColor="@drawable/radio_button_text_color"

            />
    </RadioGroup>
        <TextView
            android:background="@drawable/row_border"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:padding="0dp"
            />
        <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/swipeContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:layout_width="match_parent"
                android:id="@+id/article_list_view"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:divider="#000000"
                android:dividerHeight="1dp"
                />
    <!--    android:scrollbars="none" -->
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>



<android.support.design.widget.FloatingActionButton
    android:id="@+id/fab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@id/bottom_navigation"
    android:visibility="visible"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="60dp"
    android:layout_marginRight="16dp"
    android:src="@android:drawable/ic_menu_upload_you_tube"
    app:srcCompat="@android:drawable/ic_menu_upload_you_tube" />

</RelativeLayout>
